  a4_area
  %0 -0.7 cm2pt translate
  /dx 2.1 scaling_size mul def
  /dy -2.08 scaling_size mul def
  local_dict_size dict begin
    .1 setlinewidth
    30 835 translate
    5 { % repeat
      gsave
        3 { %repeat
          c_squares net_cut
          dx 0 translate
        } repeat
      grestore
