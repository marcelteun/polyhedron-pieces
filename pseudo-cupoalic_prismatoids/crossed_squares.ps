%%Page: 2 2
%%BeginPage
polygons begin
  a4_area
  .1 setlinewidth
  local_dict_size dict begin
    /if_show_base true def
    /base_face_no 0 def
    def_base_face
    show_base_face

    showpage
  end % local dict
end % polygons
